#Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

POST	/createAssignment	    controllers.HomeController.createAssignment
POST	/			controllers.HomeController.addAssignment
POST	/assignment		controllers.HomeController.index
GET	/assignment	    controllers.HomeController.getAssignment
GET	/assignment/editAssignment	controllers.HomeController.showEditPage(id: Long)	

POST	/assignment/saveAssignment	controllers.HomeController.saveEditedAssignment(id: Long)

GET	/submissions/:problemID		controllers.SubmissionController.addSubmission(problemID: Long)
POST    /send-score                 controllers.GradeSubmitterController.submitGradeToCanvas

POST	/send-interactivescore	   controllers.SubmissionController.addSubmissions
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count

# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

